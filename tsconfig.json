{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "jest.config.js",
    "dist",
    "setupTests.ts",
    "styleMock.ts"
  ]
}
